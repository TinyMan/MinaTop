{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "noImplicitAny": true,
    "noImplicitUseStrict": true,
    "noImplicitReturns": true,
    "strictNullChecks": true,
    "allowJs": true,
    "jsx": "react",
    "lib": [
      "dom",
      "es2017"
    ],
    "plugins": [
      {
        "name": "typescript-lit-html-plugin"
      }
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true
  }
}
