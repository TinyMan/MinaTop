{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2015",
    "noImplicitUseStrict": true,
    "noImplicitReturns": true,
    "strictNullChecks": true,
    "allowJs": true,
    "jsx": "react",
    "lib": [
      "dom",
      "es2017"
    ],
    "plugins": [
      {
        "name": "typescript-lit-html-plugin"
      }
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "functions",
    "node_modules"
  ]
}
